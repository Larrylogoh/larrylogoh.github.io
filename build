#!/usr/bin/env bash
# a script to generate a website from markdown files


dirs=("." "blog" "about")
options=(--template=static/template.html) 

for dir in "${dirs[@]}"; do
    for file in "$dir"/src/*.md; do
	[ -e "$file" ] || continue
	pandoc static/metadata.yaml "${options[@]}" -s "$file" -o "$dir"/"$(basename "$file" .md)".html 
    done

done

